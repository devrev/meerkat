{
  "name": "duckdb-serialization-types",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "duckdb-serialization-types/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/duckdb-serialization-types",
        "main": "duckdb-serialization-types/src/index.ts",
        "tsConfig": "duckdb-serialization-types/tsconfig.lib.json",
        "assets": ["duckdb-serialization-types/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs duckdb-serialization-types {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "duckdb-serialization-types/**/*.ts",
          "duckdb-serialization-types/package.json"
        ]
      }
    }
  },
  "tags": []
}
