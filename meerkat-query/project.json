{
  "name": "meerkat-query",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "meerkat-query/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/meerkat-query",
        "tsConfig": "meerkat-query/tsconfig.lib.json",
        "packageJson": "meerkat-query/package.json",
        "main": "meerkat-query/src/index.ts",
        "assets": ["meerkat-query/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs meerkat-query {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "meerkat-query/**/*.ts",
          "meerkat-query/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "meerkat-query/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
